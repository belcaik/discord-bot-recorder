{
    "compilerOptions": {
      "lib": ["ESNext"],
      "module": "CommonJS",
      "moduleResolution": "Node",
      "target": "ESNext",
      "outDir": "dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "declaration": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "src/**/*.json"],
  }